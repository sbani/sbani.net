<ul class="pager">
  <% if (page.prev) { %>
  <li class="prev pull-left">
    <a href="<%- config.root %><%- page.prev_link %>">⟵ Newer Posts</a>
  </li>
  <% } %>
  <% if (page.next) { %>
  <li class="next pull-right">
    <a href="<%- config.root %><%- page.next_link %>">Older Posts ⟶</a>
  </li>
  <% } %>
</ul>
