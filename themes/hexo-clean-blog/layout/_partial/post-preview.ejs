<article id="<%= post.layout %>-<%= post.slug %>" class="row">
  <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
    <div class="post-preview">
      <%- partial('post/title') %>
      <p class="post-meta">
        Posted in <%- partial('post/category') %> on <%- partial('post/date', {date_format: null}) %>
      </p>
    </div>
    <hr>
  </div>
</article>
