<% if (post.link){ %>
    <a href="<%- url_for(post.link) %>" target="_blank" itemprop="url"><%= post.title %></a>
<% } else if (post.title){ %>
  <% if (index){ %>
    <a href="<%- url_for(post.path) %>">
      <h2 class="post-title">
        <%= post.title %>
      </h2>
    </a>
  <% } else { %>
    <h1 itemprop="name">
      <%= post.title %>
    </h1>
  <% } %>
<% } %>
